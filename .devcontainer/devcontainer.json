{
  "name": "leetcode-go-kotlin",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.23"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    }
  },
  "postCreateCommand": "curl -s https://get.sdkman.io | bash && bash -lc \"source $HOME/.sdkman/bin/sdkman-init.sh && sdk install kotlin 2.1.10\"",
  "customizations": {
    "vscode": {
      "extensions": [
        "leetcode.leetcode",
        "golang.go",
        "vscjava.vscode-java-pack"
      ],
      "settings": {
        "leetcode.workspaceFolder": "solutions",
        "leetcode.defaultLanguage": "golang"
      }
    }
  }
}
